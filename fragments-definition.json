{
  "family": "fragments-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::470742339740:role/LabRole",
  "taskRoleArn": "arn:aws:iam::470742339740:role/LabRole",
  "containerDefinitions": [
    {
      "name": "fragments-fk",
      "image": "470742339740.dkr.ecr.us-east-1.amazonaws.com/fragments:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fragments",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "LOG_LEVEL",
          "value": "info"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_COGNITO_POOL_ID", 
          "value": "us-east-1_UsHIsMBLl"
        },
        {
          "name": "AWS_COGNITO_CLIENT_ID",
          "value": "68n47ooqg5i3dlvc82ks0nea20"
        },
        {
          "name": "PORT",
          "value": "3000"
        },
        {
          "name": "AWS_S3_BUCKET_NAME",
          "value": "seneca-fkhurrum-fragments"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ]
    }
  ]
}
